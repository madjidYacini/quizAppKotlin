<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddQuiz">

    <EditText
            android:layout_width="335dp"
            android:layout_height="56dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/question"
            android:hint="@string/question_message"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:textSize="14sp"/>
    <EditText
            android:layout_width="283dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="@string/prop_message"
            android:id="@+id/answerOne"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.187"
            android:layout_marginTop="8dp" android:textSize="14sp"/>
    <EditText
            android:layout_width="283dp"
            android:layout_height="36dp"
            android:inputType="textPersonName"
            android:text=""
            android:hint="@string/prop_message"
            android:ems="10"
            android:id="@+id/answerTwo"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:textSize="14sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" app:layout_constraintHorizontal_bias="0.182"/>
    <EditText
            android:layout_width="283dp"
            android:layout_height="36dp"
            android:inputType="textPersonName"
            android:text=""
            android:hint="@string/prop_message"
            android:ems="10"
            android:id="@+id/answerThree"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.214"
            android:textSize="14sp"/>
    <EditText
            android:layout_width="283dp"
            android:layout_height="36dp"
            android:inputType="textPersonName"
            android:text=""
            android:hint="@string/prop_message"
            android:ems="10"
            android:id="@+id/goodAnswer"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.205"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="8dp"
            android:textSize="14sp"/>
    <TextView
            android:text="Proposition 3 :"
            android:layout_width="102dp"
            android:layout_height="20dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/answerTwo" android:layout_marginTop="4dp"
            android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:text="Proposition 2 : "
            android:layout_width="102dp"
            android:layout_height="20dp"
            android:id="@+id/textView6" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/answerOne"
            android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:text="Proposition 1 : "
            android:layout_width="102dp"
            android:layout_height="20dp"
            android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/question" android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:text=" Quelle est Votre Question ?"
            android:layout_width="377dp"
            android:layout_height="31dp"
            android:id="@+id/textView8"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:fontFamily="@font/aclonica"
            android:textColor="@android:color/holo_blue_bright" android:textAlignment="center" android:typeface="sans"
            android:textStyle="bold|italic" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Numero de la Reponse :"
            android:layout_width="158dp"
            android:layout_height="23dp"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textColor="@color/colorPrimaryDark" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/answerThree"/>
    <Button
            android:text="Ajouter "
            android:layout_width="350dp"
            android:layout_height="57dp"
            android:id="@+id/btn_insert" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/goodAnswer"
            app:layout_constraintHorizontal_bias="0.466" android:background="@android:color/holo_green_light"/>
    <Button
            android:text="DELETE THE FIRST ITEM"
            android:layout_width="350dp"
            android:layout_height="46dp"
            android:id="@+id/btn_delete"
            app:layout_constraintTop_toBottomOf="@+id/btn_insert" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="@android:color/background_dark" android:background="@android:color/holo_red_dark"
            app:layout_constraintHorizontal_bias="0.384" android:layout_marginTop="44dp"/>

</android.support.constraint.ConstraintLayout>