<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlayAddQuiz">

    <Button
            android:text="Jouer"
            android:layout_width="316dp"
            android:layout_height="87dp"
            android:id="@+id/play" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:fontFamily="@font/aclonica" android:background="@android:color/holo_red_light"
            app:layout_constraintHorizontal_bias="0.682" android:textColor="@android:color/white"
            android:onClick="onClickPlay" android:layout_marginTop="200dp"
            app:layout_constraintTop_toBottomOf="@+id/username"/>
    <Button
            android:text="Ajouter une Question"
            android:layout_width="293dp"
            android:layout_height="83dp"
            android:id="@+id/score"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:background="@android:color/holo_blue_bright"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:fontFamily="@font/aclonica"
            android:textStyle="bold|italic" android:textColor="@android:color/white" android:onClick="onClickAdd"
            android:layout_marginTop="108dp" app:layout_constraintTop_toBottomOf="@+id/play"/>
    <TextView
            android:text="TextView"
            android:layout_width="228dp"
            android:layout_height="43dp"
            android:id="@+id/username" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>