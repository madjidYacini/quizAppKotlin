<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuizActivity">

    <TextView
            android:text="Propositions:"
            android:layout_width="235dp"
            android:layout_height="36dp"
            android:id="@+id/textView"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.543"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/txtQuestion"/>
    <TextView
            android:text="Qu"
            android:layout_width="276dp"
            android:layout_height="53dp"
            android:id="@+id/questionNumber"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginStart="44dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.277"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/score"/>
    <TextView
            android:layout_width="250dp"
            android:layout_height="67dp"
            android:id="@+id/txtQuestion" android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.496"
            android:fontFamily="@font/aclonica" android:textAlignment="center" android:textStyle="bold|italic"
            android:background="@android:color/background_dark" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/questionNumber"/>
    <TextView
            android:layout_width="140dp"
            android:layout_height="57dp"
            android:id="@+id/answerOne" android:textColor="@android:color/holo_orange_dark"
            android:textSize="15sp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:onClick="onClickAnswerOne"
            android:fontFamily="@font/aclonica"
            android:background="@android:color/background_dark" android:textAlignment="center"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:layout_width="140dp"
            android:layout_height="57dp"
            android:id="@+id/answerTwo" android:textColor="@android:color/holo_orange_light"
            android:textSize="15sp"
            android:onClick="onClickAnswerTwo"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/answerOne" android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:background="@android:color/black" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBaseline_toBaselineOf="@+id/answerOne" android:fontFamily="@font/aclonica"/>
    <TextView
            android:layout_width="140dp"
            android:layout_height="57dp"
            android:id="@+id/answerThree" android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:onClick="onClickAnswerThree"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/answerOne" android:layout_marginStart="132dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center" android:background="@android:color/background_dark"
            android:fontFamily="@font/aclonica" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.017"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <android.support.constraint.Constraints android:layout_width="wrap_content" android:layout_height="wrap_content"
                                            android:id="@+id/constraints"/>
    <TextView
            android:text="TextView"
            android:layout_width="142dp"
            android:layout_height="58dp"
            android:id="@+id/score" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/username" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.298"/>
    <TextView
            android:text="TextView"
            android:layout_width="142dp"
            android:layout_height="58dp"
            android:id="@+id/username" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="44dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>