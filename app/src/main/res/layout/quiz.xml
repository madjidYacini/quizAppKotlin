<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="115dp"
            android:layout_height="60dp"
            android:id="@+id/myQuestion" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/myID"
            android:layout_marginStart="20dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="68dp"
            android:layout_height="59dp"
            android:id="@+id/myID" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="DELETE"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/deleteBtn" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/myQuestion"
            android:layout_marginStart="72dp"/>
</android.support.constraint.ConstraintLayout>